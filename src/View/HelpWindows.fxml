<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.HelpWindows"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <BorderPane prefHeight="402.0" prefWidth="590.0">
            <bottom>
                <Button mnemonicParsing="false" onAction="#startGame" prefHeight="39.0" prefWidth="665.0" text="START PLAYING" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="40.0" left="30.0" right="30.0" />
                    </BorderPane.margin>
                </Button>
            </bottom>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="opening1" alignment="CENTER" contentDisplay="CENTER" prefWidth="590.0" text="The evil dragon kidnapped the prince">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="opening2" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="60.0" prefWidth="590.0" text="away from his princess...">
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="opening3" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="60.0" prefWidth="590.0" text="Help her retrive him!" />
                    </children>
                    <padding>
                        <Insets top="50.0" />
                    </padding>
                </VBox>
            </center>
            <top>
                <Label text="MAZES &amp; DRAGONS" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="30.0" />
                    </BorderPane.margin>
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
            </top>
        </BorderPane>
    </children>

</AnchorPane>
